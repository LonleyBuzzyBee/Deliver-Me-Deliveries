
<!DOCTYPE html>
<html>
  <head>
    <style>
      #map {
        width: 100%;
        height: 400px;
        background-color: grey;
        position: sticky;
      }
    </style>
     <link rel="stylesheet" type="text/css" href="~/css/style.css" />
  </head>
  <body>
   
    @using deliver_me_deliveries.Models;
    <div class="parent3">
      <div id="map"></div>

 <script>
// Initialize and add the map
function initMap() {
  // The location of Uluru
  var seattle = {lat: 47.608940, lng: -122.340141, address:"1521 1st Ave, Seattle, WA"}
  // The map, centered at Uluru
  var map = new google.maps.Map(
      document.getElementById('map'), {zoom: 11, center: seattle});
  // The marker, positioned at Uluru
  var marker = new google.maps.Marker({position: seattle, map: map});
}
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD-CbiljbNW94CCtFsBF5xQTMiv8ncY_KY&callback=initMap">
    </script>
    


      <div class="box2">
    @foreach (Restaurant restaurant in Model)
    {
          <div class="logo-margin">
          <a href="/Restaurants/Details/@(restaurant.ApiKey)"><img src="@restaurant.LogoUrl" width="90px" height="90px"></a>
          </div>
          <div class="info-margin">
            <h3><strong><em>@restaurant.Name</em></strong></h3>
            <h5>Address:</h5>
              <p>@restaurant.StreetAddress @restaurant.City, @restaurant.State @restaurant.Zip</p>
              <p>@Html.ActionLink($"{restaurant.Name}", "Details", new { ApiKey = restaurant.ApiKey })</p>
          </div>
          <hr>
        }
        
        </div>
    </div>
  </body>
</html>